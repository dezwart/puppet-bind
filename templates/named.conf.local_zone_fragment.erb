
// Zone fragment for <%= name %>
<%- if @forwarders -%>
zone "<%= name %>" IN {
  type <%= mode %>;
  forwarders { <%= forwarders %>; };
};
<%- else -%>
zone "<%= name %>" IN {
    type <%= mode %>;
    file "/var/lib/bind/db.<%= name %>";
  <% if mode == 'slave' -%>
    masters { <%= masters %>; };
  <% end -%>
  <%- if @allow_update -%>
    allow-update { key <%= allow_update %>; };
  <%- end %>
};
<%- end -%>

